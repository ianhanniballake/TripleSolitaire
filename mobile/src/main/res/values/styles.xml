<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default theme -->
    <style name="Theme.TripleSolitaire" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar.TripleSolitaire</item>
    </style>

    <style name="ActionBar.TripleSolitaire" parent="@android:style/Widget.Holo.ActionBar.Solid">
    </style>

    <!-- Main Menu theme -->
    <style name="Theme.TripleSolitaire.Main">
        <item name="android:actionBarStyle">@style/ActionBar.TripleSolitaire.Main</item>
    </style>

    <style name="ActionBar.TripleSolitaire.Main">
        <item name="android:displayOptions">none</item>
    </style>

    <!-- Game theme -->
    <style name="Theme.TripleSolitaire.Game">
        <item name="android:actionBarStyle">@style/ActionBar.TripleSolitaire.Game</item>
    </style>

    <style name="ActionBar.TripleSolitaire.Game">
